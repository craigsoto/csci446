<html>
	<head>
		<title>Top 100 Albums of All Time</title>
		<style>
			tr.highlighted { background-color: #fffcb7; }
		</style>
	</head>
	<body>
		<h1>Rolling Stone's Top 100 Albums of All Time</h1>
		<p>Sorted by <%= #{sort_order.capitalize} %> </p>
		<table>
			<% albums.each do |album| %>
			<%= album.rank == rank_to_highlight ? "\t<tr class=\"highlighted\">\n" : "\t<tr>\n" %>
			<%= "\t\t<td>#{album.rank}</td>\n" %>
			<%= "\t\t<td>#{album.title}</td>\n" %>
			<%= "\t\t<td>#{album.year}</td>\n" %>
			<%= "\t</tr>\n" %>
			<% end %>
		</table>
	</body>
</html>